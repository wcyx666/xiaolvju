<wxs module="Filter" src="../../filter/filter.wxs"></wxs>
<view class="author">
  <view class="author_setUserInfo">
    <view class="title">
      基本信息
    </view>
    <van-cell-group>
      <van-field
        value="{{ user_name }}"
        label="姓名"
        placeholder="请输入姓名"
        border="{{ false }}"
        bind:change="onChangeName"
      />
      <van-field
        value="{{ user_mobile }}"
        label="手机号码"
        placeholder="请输入手机号码"
        border="{{ false }}"
        bind:change="onChangeMobile"
      />
      <van-field
        value="{{ user_city }}"
        label="小区地址"
        placeholder="请输入小区地址"
        border="{{ false }}"
        bind:change="onChangeCity"
      />
      <van-field
        value="{{ user_num }}"
        label="楼号门牌"
        placeholder="请输入楼号门牌"
        border="{{ false }}"
        bind:change="onChangeNum"
      />
      <van-field
        value="{{ date }}"
        label="预约时间"
        placeholder="请选择预约时间"
        border="{{ false }}"
        bindtap="onChangeMake"
        readonly="true"
      />
    </van-cell-group>
    <view class="section">
      <view class="section_title">支付方式</view>
      <picker bindchange="bindPickerChange" value="{{play_way}}" range="{{columns}}">
        <view class="picker">
          {{columns[play_way]}}
        </view>
      </picker>
    </view>
  </view>
  <view class="author_setSpInfo">
    <view class="title">
      服务信息
    </view>
    <van-cell-group>
      <van-field
        value="{{ comm_type }}"
        label="商品"
        border="{{ false }}"
        readonly="true"
        bind:change="onChange"
      />
      <van-field
        value="{{ order_name }}"
        label="类型"
        readonly="true"
        border="{{ false }}"
        bind:change="onChange"
      />
      <van-field
        value="￥{{ Filter.toFixed(order_price) }}"
        label="价格"
        readonly="true"
        border="{{ false }}"
        bind:change="onChange"
      />
      <van-field
        value="-{{ coupon_price }}元优惠卷"
        label="优惠券"
        readonly="true"
        border="{{ false }}"
      />
    </van-cell-group>
    
  </view>
  <van-submit-bar
    price="{{ order_endPrice }}"
    button-text="提交订单"
    bind:submit="onSubmit"
  />
</view>