/* pages/home/home.wxss */
.home {
  padding: 0 30rpx;
  font-size: 32rpx;
}
.home_city {
  display: flex;
  padding: 30rpx 0;
}
.city {
  flex: 1;
  display:flex;
  align-items:center;
}
.city image {
  width: 42rpx;
  height: 42rpx;
}
.attention {
  font-size: 24rpx;
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  position: relative;
}
.kailong{
  position: absolute;
  top: -20rpx;
  right: 90rpx;
	width:0;
  height:0;
	border-right:20rpx solid transparent;
	border-left:20rpx solid transparent;
	border-bottom:30rpx solid #515151;
}
.swiper {
  width: 100%;
  height: 273rpx;
}
.swiper swiper {
  width: 100%;
  height: 100%;
}
.swiper image {
  width: 100%;
  height: 273rpx;
  border-radius: 10rpx;
}
.activity {
  padding-top: 20rpx;
}
.activity image {
  width: 100%;
  height: 224rpx;
}
.home_other_recommont_title {
  padding-bottom: 30rpx;
  padding-top: 50rpx;
}
.home_other_content_list {
  display: -webkit-flex;
  padding-bottom: 30rpx;
}
.home_other_content_img {
  width: 200rpx;
}
.home_other_content_img image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 6rpx;
}
.home_other_content_content {
  flex: 1;
  margin-left: 20rpx;
  position: relative;
}
.home_other_content_content .motny {
  font-size: 28rpx;
  position: absolute;
  bottom: 0;
}
.home_other_content_content .deilt {
  color: #999;
  font-size: 28rpx;
  padding: 10rpx 0;
}
.home_other_content_content .motny .p_motny {
  font-size:42rpx;
  font-weight:500;
  color:red;
}
.coupom {
  width: 100%;
  height: 100%;
  background: #000;
  background-color:rgba(0,0,0,0.8);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.res {
  text-align: center;
}
.cou_box image {
  width: 578rpx;
  height: 516rpx;
}
.cou_code image {
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
}
.title {
  font-size: 34rpx;
}