/* pages/smoke/smoke.wxss */
.smoke {
  font-size: 28rpx;
}
.smoke_box {
  padding: 20rpx;
}
.smoke_img image {
  width: 100%;
  height: 332rpx;
}
.smoke_box_table {
  border:1rpx solid #efefef;
  color: #ccc;
  margin-bottom: 20rpx;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 60rpx;
  align-items: center;
}
.bottom {
  border-bottom:1rpx solid #efefef;
}
.right {
  border-right:1rpx solid #efefef;
}
.td {
    width:50%;
    height: 60rpx;
    justify-content: center;
    text-align: center;
    line-height: 60rpx;
}
.th {
  width: 50%;
  justify-content: center;
  color: #333;
  display: flex;
  height: 60rpx;
  align-items: center;
}
.smoke_box_title {
  padding-bottom: 20rpx;
  line-height: 45rpx;
  color: #ccc;
}
.smoke_box_title text {
  color: #333;
}
.btn {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #efefef;
}
.btn_an {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background:#f75c56;
}