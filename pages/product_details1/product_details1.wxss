/* pages/author_details/author_details.wxss */
.details_box {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}
.title {
  box-sizing: border-box;
  width: 100%;
  font-size: 32rpx;
  padding-left: 20rpx;
  margin: 20rpx 0;
  border-left: 10rpx solid #f75c56;
}
.title text {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}
.content {
  font-size: 28rpx;
  padding: 20rpx;
  color: #333;
  line-height: 58rpx;
}
.content_icon {
  width: 100%;
}
.content_icon_img {
  width: 33.3%;
  float: left;
  text-align: center;
  padding-bottom: 30rpx;
}
.content_icon_img view {
  padding-top: 10rpx;
}
.content_icon_img image {
  width: 60rpx;
  height: 60rpx;
  padding: 30rpx;
  background: #efefef;
  border-radius: 80rpx;
}
.content_anquan {
  display: flex;
  font-size: 28rpx;
  padding: 20rpx;
}
.content_list {
  flex: 1;
  text-align: center;
}
.content_anquan image {
  width: 100rpx;
  height: 100rpx;
}
.content_anquan text {
  display: block;
  color: #333;
}
.content_t {
  font-size: 24rpx;
  color: #ccc;
}
.btn {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  background: #fff;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #efefef;
}
.btn_an {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background:#76aef8;
}
.phone {
  width: 100%;
  height: 100%;
  background: #000;
  background-color:rgba(0,0,0,0.8);
  position: fixed;
  top: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.res {
  text-align: center;
}
.phone image {
  width: 459rpx;
  height: 486rpx;
}
.cou_code image {
  width: 60rpx;
  height: 60rpx;
  margin-top: 20rpx;
}