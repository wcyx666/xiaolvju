/* pages/order_pay/order_pay.wxss */
.pay {
  box-sizing: border-box;
  width: 100%;
  padding: 20rpx;
  font-size: 32rpx;
}
.pay_img {
  text-align: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #efefef;
}
.pay_box {
  border-bottom: 1rpx solid #efefef;
}
.pay_img image {
  width: 150rpx;
  height: 150rpx;
}
.pay_order_id {
  padding: 20rpx 0;
}
.pay_order_id text {
  color: #ff0000;
}
.pay_btn {
  width: 100%;
  height: 80rpx;
  text-align: center;
  color: #fff;
  line-height: 80rpx;
  border-radius: 6rpx;
  background: #07c160;
  margin-top: 30rpx;
  font-size: 28rpx;
}